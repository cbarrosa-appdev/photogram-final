<h1><%=@the_user.username%></h1>

<dl>
  <dt>Private</dt>
  <dd><%=@the_user.private%></dd>

  <dt>Followers</dt>
  <dd><%=@the_user.followers.count%></dd>
  <%if @current_user.id!=@the_user.id%>
  <%follow=FollowRequest.where({:recipient_id=>@the_user.id, :sender_id=>@current_user.id}).at(0)%>
    <%if follow==nil %>
        <div>
          <form action="/insert_follow_request" method="post">
            <input type="hidden" name="query_recipient_id" value=@the_user.id>

            <button>
              Follow
            </button>
          </form>
        </div>
    <%else%>
      <%if follow.status=="accepted" %>
      <div><a href=/delete_follow_request/<%=follow.id%>>Unfollow</a></div>
      <%end%>
    <%end%>
  <%end%>

<%if @current_user.id==@the_user.id%>
   <dt>Pending follow requests</dt>
   <%pendin=FollowRequest.where({:recipient_id=>@the_user.id, :status=>"pending"})%>
  <ul>
   <%pendin.each do |request|%>
   <li><%=request.sender.username%></li>
   <%end%>
   </ul>
  <%end%>

  <dt>Following</dt>
  <dd><%=@the_user.following.count%></dd>

  <%if @current_user.id==@the_user.id%>
<dt>Edit user</dt>
  <dd>
    <form action="/modify_user2" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="query_username" placeholder="Enter a username..." value=<%=@the_user.username%>>
      <label for="browser_private">Private?</label>
      <input id="browser_private" type="checkbox" name="query_private"  value=<%=@the_user.private%>>
      <button>Update user</button>
    </form>
  </dd>
  <%end%>
</dl>

<ul>
    <li><a href="/users/<%=@the_user.username%>">Profile</a></li>
    <li><a href="/users/<%=@the_user.username%>/liked_photos">Liked photos</a></li>
    <li><a href="/users/<%=@the_user.username%>/feed">Feed</a></li>
    <li><a href="/users/<%=@the_user.username%>/discover">Discover</a></li>
</ul>

<h2>Own photos (<%=@the_user.photos.count%>)</h2>

<table border="1">
      <tr>
        <th>Image</th>
        <th>Caption</th>
        <th>Owner</th>
        <th>Posted</th>
        <th>Likes</th>
        <th></th>
      </tr>

      <% @the_user.photos.each do |a_photo| %>
      <tr>
        <td><img src="<%=a_photo.image%>"></td>
        <td><%= a_photo.caption %></td>
        <td><%= a_photo.owner.username %></td>
        <td> <%= time_ago_in_words(a_photo.created_at) %> ago</td>
        <td><%= a_photo.likes_count %></td>
        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
